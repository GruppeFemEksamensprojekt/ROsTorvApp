<UserControl
    x:Class="ROsTorvApp.Include.NavigationBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ROsTorvApp.Include"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="65"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid
        Grid.Row="12"
        Grid.ColumnSpan="4"
        Background="#eee">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Column="0"
            Padding="30,5"
            HorizontalAlignment="Center">
            <Button.Background>
                <SolidColorBrush Opacity="0" />
            </Button.Background>
            <StackPanel>
                <Image Height="35" Source="/Assets/Images/HomeImage.png" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Foreground="#444"
                    Text="Hjem" />
            </StackPanel>
        </Button>
        <Button
            Grid.Column="1"
            Padding="30,5"
            HorizontalAlignment="Center">
            <Button.Background>
                <SolidColorBrush Opacity="0" />
            </Button.Background>
            <StackPanel>
                <Image Height="35" Source="/Assets/Images/ShopsImage.png" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Foreground="#444"
                    Text="Butikker" />
            </StackPanel>
        </Button>
        <Button
            Grid.Column="2"
            Padding="30,5"
            HorizontalAlignment="Center">
            <Button.Background>
                <SolidColorBrush Opacity="0" />
            </Button.Background>
            <StackPanel>
                <Image Height="35" Source="/Assets/Images/EventsImage.png" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Foreground="#444"
                    Text="Events" />
            </StackPanel>
        </Button>
        <Button
            Grid.Column="3"
            Padding="30,5"
            HorizontalAlignment="Center">
            <Button.Background>
                <SolidColorBrush Opacity="0" />
            </Button.Background>
            <StackPanel>
                <Image Height="35" Source="/Assets/Images/MoreImage.png" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Foreground="#444"
                    Text="Mere" />
            </StackPanel>
        </Button>

    </Grid>
</UserControl>
