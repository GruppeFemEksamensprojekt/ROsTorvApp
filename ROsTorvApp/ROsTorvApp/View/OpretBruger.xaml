        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2" Grid.RowSpan="12">
            <TextBlock Text="Opret bruger"
                       FontSize="40"
                       FontWeight="Bold"
                       Margin="5"/>
            <TextBlock Text="Opret din bruger ved at udfylde felterne nedenfor."
