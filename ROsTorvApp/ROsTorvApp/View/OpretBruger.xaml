                       Margin="5 0 0 0"/>
            <TextBox Text=""
                     Margin="5"/>
            <TextBlock Text="Efternavn"
                       Margin="5 0 0 0"/>
            <TextBox Text=""
                     Margin="5"/>
            <TextBlock Text="Alder"
                       Margin="5 0 0 0"/>
            <TextBox Text=""
                     Margin="5"/>
            <TextBlock Text="E-mail"
                       Margin="5 0 0 0"/>
            <TextBox Text=""
                     Margin="5"/>
            <TextBlock Text="Kodeord"
                       Margin="5 0 0 0"/>
            <TextBox Text=""
                     Margin="5"/>
            <TextBlock Text="Bekræft kodeord"
                       Margin="5 0 0 0"/>
            <TextBox Text=""
                     Margin="5"/>
            <Button Content="Opret bruger"
                    HorizontalAlignment="Center"
                    Width="250"/>
        </StackPanel>
    </Grid>
</Page>
