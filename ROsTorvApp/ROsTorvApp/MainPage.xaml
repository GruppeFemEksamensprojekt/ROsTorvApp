<Page
    x:Class="ROsTorvApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Models="using:ROsTorvApp.Model.Center.Offers"
    xmlns:ViewModelCollections="using:ROsTorvApp.ViewModel.Collections"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ROsTorvApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.DataContext>
        <ViewModelCollections:StoreCollectionVM />
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Row="12"
            Grid.ColumnSpan="2"
            Background="#eee">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Padding="30,5"
                HorizontalAlignment="Center"
                Background="#eee">
                <StackPanel>
                    <Image Height="40" Source="/Assets/Images/HomeImage.png" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="8"
                        Foreground="#444"
                        Text="Home" />
                </StackPanel>
            </Button>
            <Button
                Grid.Column="1"
                Padding="30,5"
                HorizontalAlignment="Center"
                Background="#eee">
                <StackPanel>
                    <Image Height="40" Source="/Assets/Images/HomeImage.png" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="8"
                        Foreground="#444"
                        Text="Home" />
                </StackPanel>
            </Button>
            <Button
                Grid.Column="2"
                Padding="30,5"
                HorizontalAlignment="Center"
                Background="#eee">
                <StackPanel>
                    <Image Height="40" Source="/Assets/Images/HomeImage.png" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="8"
                        Foreground="#444"
                        Text="Home" />
                </StackPanel>
            </Button>
            <Button
                Grid.Column="3"
                Padding="30,5"
                HorizontalAlignment="Center"
                Background="#eee">
                <StackPanel>
                    <Image Height="40" Source="/Assets/Images/HomeImage.png" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="8"
                        Foreground="#444"
                        Text="Home" />
                </StackPanel>
            </Button>
        </Grid>

    </Grid>

</Page>
