<Page
    x:Class="ROsTorvApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModelCollections="using:ROsTorvApp.ViewModel.Collections"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ROsTorvApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.DataContext>
        <ViewModelCollections:StoreCollectionVM />
    </Page.DataContext>
    <Grid Background="#D8D8F6">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="4"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <StackPanel Width="220">
                <TextBlock FontSize="20" Text="Brugernavn:" />
                <TextBox Text="" />
            </StackPanel>
        </StackPanel>
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="4"
            Background="#B18FCF">
            <TextBlock
                HorizontalAlignment="center"
                VerticalAlignment="Center"
                FontSize="30"
                Foreground="Black"
                Text="RO's Torv" />
        </StackPanel>
        <!--  Navigation Bar  -->
        <Grid
            Grid.Row="12"
            Grid.ColumnSpan="4"
            Background="#eee">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Padding="30,5"
                HorizontalAlignment="Center">
                <Button.Background>
                    <SolidColorBrush Opacity="0" />
                </Button.Background>
                <StackPanel>
                    <Image Height="35" Source="/Assets/Images/HomeImage.png" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="10"
                        Foreground="#444"
                        Text="Hjem" />
                </StackPanel>
            </Button>
            <Button
                Grid.Column="1"
                Padding="30,5"
                HorizontalAlignment="Center">
                <Button.Background>
                    <SolidColorBrush Opacity="0" />
                </Button.Background>
                <StackPanel>
                    <Image Height="35" Source="/Assets/Images/ShopsImage.png" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="10"
                        Foreground="#444"
                        Text="Butikker" />
                </StackPanel>
            </Button>
            <Button
                Grid.Column="2"
                Padding="30,5"
                HorizontalAlignment="Center">
                <Button.Background>
                    <SolidColorBrush Opacity="0" />
                </Button.Background>
                <StackPanel>
                    <Image Height="35" Source="/Assets/Images/EventsImage.png" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="10"
                        Foreground="#444"
                        Text="Events" />
                </StackPanel>
            </Button>
            <Button
                Grid.Column="3"
                Padding="30,5"
                HorizontalAlignment="Center">
                <Button.Background>
                    <SolidColorBrush Opacity="0" />
                </Button.Background>
                <StackPanel>
                    <Image Height="35" Source="/Assets/Images/MoreImage.png" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="10"
                        Foreground="#444"
                        Text="Mere" />
                </StackPanel>
            </Button>

        </Grid>
        <!--  /Navigation Bar  -->

    </Grid>

</Page>
